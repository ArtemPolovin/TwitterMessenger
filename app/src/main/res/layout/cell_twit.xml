<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cell_twit"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="52dp"
        android:layout_height="52dp" />

    <LinearLayout
        android:id="@+id/user_data_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/image_profile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp" />

        <TextView
            android:id="@+id/text_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_twit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_data_container"
        android:layout_alignStart="@+id/user_data_container"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/user_data_container"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="337dp"
        android:layout_height="165dp"
        android:layout_below="@+id/text_twit"
        android:layout_alignStart="@+id/text_twit"
        app:cardCornerRadius="12dp"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/attached_image1"
                android:layout_width="337dp"
                android:layout_height="165dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:transitionName="image1"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/attached_image2"
                android:layout_width="165dp"
                android:layout_height="79dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:transitionName="image2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/attached_image3"
                android:layout_width="165dp"
                android:layout_height="79dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:transitionName="image3"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/attached_image4"
                android:layout_width="165dp"
                android:layout_height="79dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:transitionName="image4"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
